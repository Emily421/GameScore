<!DOCTYPE html>
<html>
    <style>
        body {
            text-align: center;
        }
        form {
            display: block;
            width: 100%;
            max-width: 400px;
            padding: 50px 30px;
            box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.2);
            border-radius: 16px;
        }

        .err-msg {
            padding: 10px 15px;
            background-color: white;
            border-radius: 8px;
            margin-bottom: 15px;
            color: red;
            box-shadow: 0px 6px 12px black;
        }
    </style>
    <form action="/login" method="post">
        <div>
            <% if (error) { %>
                <p class="err-msg">Username or Password is Incorrect</p>
            <% } %>
            <h1>Login</h1>
        </div>
        <div class="form-group">
            <label>Username: </label>
            <input 
                type="text" 
                name="username" 
                id="username" 
                placeholder="Enter your username" 
                required />
        </div>
        <div class="form-group">
            <label>Password:</label>
            <input 
                type="password"
                name="password"
                id="password"
                placeholder="Enter your password"
                required />
        </div>
        <div>
            <input type="submit" value="Login" />
        </div>
        <a href="/register">Register</a>
    </form>
</html>